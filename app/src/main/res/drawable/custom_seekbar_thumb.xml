<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#393E46"/>
            <size
                android:width="8dp"
                android:height="8dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#393E46"/>
            <size
                android:width="8dp"
                android:height="8dp"/>
        </shape>
    </item>
</selector>