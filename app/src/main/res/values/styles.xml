<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/background_splash</item>-->
    </style>

    <!--기본 텍스트 스타일-->
    <style name="BlackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
    </style>
    
    <!--시간표 부분화면 스타일 모음-->
    <style name="FragmentTimetableButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/cyan_round_button</item>
    </style>

    <style name="FragmentTimetableEditText">
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    
    <!--시간표2 위젯 및 위젯 설정 화면 스타일 모음-->
    <style name="WidgetTimetable2BigText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/nanum_myeongjo</item>
    </style>

    <style name="WidgetTimetable2SmallText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/nanum_myeongjo</item>
    </style>

    <!--위젯용 설정 화면 -->
    <style name="ActivityConfigureText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
    </style>

    <style name="ActivityConfigureText2">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
    </style>

    <style name="ActivityConfigureRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActivityConfigurSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
    </style>

    <!--크레딧 화면 스타일 모음-->
    <style name="ActivityCrditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/nanum_myeongjo</item>
    </style>

</resources>
