<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:gravity="center"
        android:id="@+id/card_show_date_text"
        android:textSize="24sp"
        android:padding="16dp"
        style="@style/BlackText"/>

    <TextView
        android:id="@+id/card_show_cafe_text"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:gravity="center"
        style="@style/BlackText"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/card_show_tab_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:tabTextColor="@color/colorGray"
        app:tabSelectedTextColor="@color/colorBlack"
        app:tabIndicatorColor="@color/colorCyan">

        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/cafeteria_lunch" />

        <android.support.design.widget.TabItem
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/cafeteria_dinner" />

    </android.support.design.widget.TabLayout>
</LinearLayout>

