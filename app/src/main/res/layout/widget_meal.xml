<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_meal_background"
    android:orientation="vertical">

    <TextView
        android:textSize="24sp"
        android:gravity="center"
        style="@style/BlackText" />

    <View style="@style/GrayVerticalDivider"/>

    <TextView
        android:padding="16dp"
        android:gravity="center"
        android:textSize="16sp"
        style="@style/BlackText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="@string/widget_previous_cafeteria"
            style="@style/WhiteButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/button_cyan"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:text="@string/widget_next_cafeteria"
            style="@style/WhiteButton"/>

    </LinearLayout>
</LinearLayout>
