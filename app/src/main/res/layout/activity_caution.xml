<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/background_caution">

        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/timetable_caution"
            android:textSize="16sp"
            style="@style/BlackText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/caution_cancel_button"
                android:layout_margin="8dp"
                android:text="@string/timetable_cancel"
                style="@style/FragmentTimetableButton"/>

            <Button
                android:id="@+id/caution_download_button"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/timetable_get"
                style="@style/FragmentTimetableButton"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
