<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/this_subject_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nanum_myeongjo"/>

    <TextView
        android:id="@+id/this_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nanum_myeongjo"/>

    <TextView
        android:id="@+id/this_subject_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nanum_myeongjo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/widget_next_time"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nanum_myeongjo"/>

        <TextView
            android:id="@+id/next_subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nanum_myeongjo"/>

    </LinearLayout>
</LinearLayout>