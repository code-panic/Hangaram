<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_show_date_text"
        style="@style/BlackText"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/card_show_cafe_text"
        style="@style/BlackText"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/card_show_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorCyan"
        app:tabSelectedTextColor="@color/colorBlack255"
        app:tabTextColor="@color/colorBlack144">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafeteria_lunch" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafeteria_dinner" />

    </android.support.design.widget.TabLayout>
</LinearLayout>

