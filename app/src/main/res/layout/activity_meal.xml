<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/lunchOrdinner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <com.hangaram.hellgaram.CustomView.SecondOverlappedSquareBorder
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.hangaram.hellgaram.CustomView.FirstOverlapedSquareBorder
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/chandedMealText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="점심"
            android:textSize="26dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/f_nanum_myeongjo"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mealToggle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lunchOrdinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="최근 4일동안 인터넷 접속이 없습니다."
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/f_nanum_myeongjo"/>

        <com.hangaram.hellgaram.CustomView.DoubleSquareBorder
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
