<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_widget"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/subject_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/spoqa_regular"
        android:text="1교시"
        android:textAlignment="center"
        android:textColor="@color/colorBlack255"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_bold"
        android:text="기하와 벡터"
        android:textAlignment="center"
        android:textColor="@color/colorBlack255"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/subject_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/spoqa_bold"
        android:text="#이현주 #311호"
        android:textAlignment="center"
        android:textColor="@color/colorBlack255"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/next_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_regular"
        android:text="next 스포츠경기"
        android:textAlignment="center"
        android:textColor="@color/colorBlack255"
        android:textSize="8sp" />
</LinearLayout>
